{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ES2020"],
      "moduleResolution": "node",
      "types": [
        "node",
        "mocha",
        "chai",
        "hardhat",
        "@nomicfoundation/hardhat-chai-matchers"
      ],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": false,
      "skipLibCheck": true
    },
    "include": [
      "hardhat.config.ts",
      "scripts",
      "test",
      "typechain-types"
    ]
  }